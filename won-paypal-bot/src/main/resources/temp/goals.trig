# Individual Definitions
ex2:p2g-individuals {
    # FeePayer
    pay:Sender   a pay:FeePayer ;
                 rdfs:label "SENDER" .
    pay:Receiver a pay:FeePayer ;
                 rdfs:label "EACHRECEIVER" .
      ## TODO: ShaclReport filter out only the payment model !!!
    # Currencies
    cur:AUD a cur:Currency ;
            cur:code "AUD" .
    cur:BRL a cur:Currency ;
