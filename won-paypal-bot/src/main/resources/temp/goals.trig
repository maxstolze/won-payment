@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix s:     <http://schema.org/> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc:    <http://purl.org/dc/elements/1.1/> .
@prefix ex2: <http://example.org/2/> .
@prefix pay: <http://purl.org/webofneeds/payment#> .
@prefix currency: <http://purl.org/webofneeds/currency#> .

@prefix olntest:   <http://sat.researchstudio.at/oln/test/> .


pay:Sender   a pay:FeePayer .
pay:Receiver a pay:FeePayer .


ex2:p2g-shapes {
        <http://example.org/2/SelfShape>
              a   sh:NodeShape ;
              sh:targetNode   pay:Payment ;
              sh:property [
                              sh:path [ sh:inversePath rdf:type ];
                              sh:minCount 1 ;
                              sh:maxCount 1 ;
                          ] .
      
        <http://example.org/2/PaymentShape>
              a                      sh:NodeShape  ;
              sh:targetClass         pay:Payment   ;
              sh:closed              true          ;
              # sh:ignoredProperties   ( rdf:type )  ;
              sh:property [
                              sh:path pay:hasAmount ;
                              sh:datatype xsd:decimal ;
                              sh:minExclusive 0 ;
                              sh:minCount 1;
                              sh:maxCount 1;
                          ] ;
              sh:property [   # RDF:TYPE defined instead of ignoredProperties
                              sh:path rdf:type ;
                              sh:nodeKind sh:IRI ;
                              sh:minCount 0;
                              sh:maxCount 1;
                          ] ;
              sh:property [
                              sh:path pay:hasCurrency ;
                              sh:datatype xsd:string ;
                              sh:pattern "^[A-Z]{3}$" ;
                              sh:minCount 1;
                              sh:maxCount 1;
                          ] ;
              sh:property [
                              sh:path pay:hasReceiver ;
                              sh:datatype xsd:string ;
                              sh:minCount 1;
                              sh:maxCount 1;
                              sh:pattern "^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$";
                          ] ;
              sh:property [
                              sh:path pay:hasSecret ;
                              sh:datatype xsd:string ;
                              sh:minCount 1;
                              sh:maxCount 1;
                              sh:minLength 4 ;
                          ] ;
              sh:property [
                              sh:path pay:hasNeedCounterpart ;
                              sh:nodeKind sh:IRI ;
                              sh:minCount 1;
                              sh:maxCount 1;
                          ] ;
                          
              # Optional Fields
              sh:property [
                              sh:path pay:hasFeePayer ;
                              sh:minCount 0;
                              sh:maxCount 1;
                              sh:nodeKind sh:IRI ;
                              sh:class pay:FeePayer ;
                              # sh:in ( pay:Sender pay:Receiver ) ;
                          ] ;
              sh:property [
                              sh:path pay:hasTax ;
                              sh:datatype xsd:decimal ;
                              sh:minExclusive 0 ;
                              sh:minCount 0;
                              sh:maxCount 1;
                          ] ;
              sh:property [
                              sh:path pay:hasInvoiceId ;
                              sh:datatype xsd:string ;
                              sh:minCount 0;
                              sh:maxCount 1;
                          ] ;
              sh:property [
                              sh:path pay:haseExpirationTime ;
                              sh:datatype xsd:duration ;
                              sh:minCount 0;
                              sh:maxCount 1;
                          ] ;   
              sh:property [
                              sh:path pay:hasInvoiceDetails ;
                              sh:datatype xsd:string ;
                              sh:minCount 0;
                              sh:maxCount 1;
                          ] .
                          
      

}