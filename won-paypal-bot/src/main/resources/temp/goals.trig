            cur:code "USD" ;
            cur:sign "$"   .
}


ex2:p2g-shapes {
<http://example.org/2/SelfShape>
    a sh:NodeShape ;
    sh:targetNode s:Invoice ;
    sh:property [
        sh:path [ sh:inversePath rdf:type ];
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

<http://example.org/2/PaymentShape>
    a sh:NodeShape ;
    sh:closed true ;
    sh:targetClass s:Invoice ;
    sh:property [
        sh:path rdf:type;
        sh:minCount 1;
    ] ;
    sh:property [   # RDF:TYPE defined instead of ignoredProperties
        sh:path rdf:type ;
        sh:nodeKind sh:IRI ;
        sh:minCount 0;
        sh:maxCount 1;
    ] ;
    # sh:property [
    #     sh:path s:identifier ;
    #     sh:datatype xsd:string ;
    #     sh:minCount 1;
    #     sh:maxCount 1;
    #     sh:minLength 4 ;
    # ] ;
    sh:property [
        sh:path s:accountId ;
        sh:datatype xsd:string ;
        sh:minCount 1;
        sh:maxCount 1;
        sh:pattern "^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$";
    ] ;
    sh:property [
        sh:path s:totalPaymentDue;
        sh:class s:CompoundPriceSpecification ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    # Optional Fields
    sh:property [
        sh:path pay:hasFeePayer ;
        sh:minCount 0;
        sh:maxCount 1;
        sh:nodeKind sh:IRI ;
        sh:class pay:FeePayer ;
        # sh:in ( pay:Sender pay:Receiver ) ;
    ] ;
    sh:property [
        sh:path pay:hasTax ;
        sh:datatype xsd:decimal ;
        sh:minExclusive 0 ;
        sh:minCount 0;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path pay:hasInvoiceId ;
        sh:datatype xsd:string ;
        sh:minCount 0;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path pay:hasExpirationTime ;
        sh:datatype xsd:duration ;
        sh:minCount 0;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path pay:hasInvoiceDetails ;
        sh:datatype xsd:string ;
        sh:minCount 0;
        sh:maxCount 1;
    ] .

<http://example.org/2/CompoundPriceShape>
    a sh:NodeShape;
    sh:targetClass s:CompoundPriceSpecification ;
    sh:closed true ;
    sh:property [
        sh:path s:price ;
        sh:datatype xsd:float ;
        sh:minExclusive 0 ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path s:priceCurrency ;
        sh:datatype xsd:string ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path rdf:type;
        sh:minCount 1;
    ] .
}